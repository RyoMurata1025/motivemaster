<div class='chat-room-form'>
  <h1>新規ツイート</h1>
  <%=form_with model: @room, local: true do |f|%>
    <div class='chat-room-form__field'>
      <div class='chat-room-form__field--left'>
        <%= f.label :ツイート, class: 'chat-room-form__label'%>
      </div>
      <div class='chat-room-form__field--right'>
        <%= f.text_field :name, class: 'chat__room_name chat-room-form__input', placeholder: 'ツイートを記入してください'%>
      </div>
    </div>

    <div class='chat-room-form__field'>
    </div>

    <%
=begin%>
 <div class='chat-room-form__field'>
      <div class='chat-room-form__field--left'>
        <label class='chat-room-form__label' for='chat_room_チャットメンバー'>チャットメンバー</label>
      </div>
      <div class='chat-room-form__field--right'>
        <select name="room[user_ids][]">
          <option value="">チャットするユーザーを選択してください</option>
          <% User.all.where.not(id: current_user.id).each do |user| %>
            <option value=<%=user.id%>><%= user.name %></option>
          <% end %>
        </select>ii
        <input name="room[user_ids][]" type="hidden" value=<%=current_user.id%>>
      </div>
    </div> 
<%
=end%>

    <div class='chat-room-form__field'>
      <div class='chat-room-form__field--left'>
        <%= f.label :現在の感情, class: 'chat-room-form__label'%>
      </div>
      <div class='chat-room-form__field--right'>
        <%= f.collection_select(:motivation_id, Motivation.all, :id, :name, {include_blank: "---"}, {class:"select-box", id:"item-category"}) %>
      </div>
    </div>
    
    
    <div class='chat-room-form__field'>
      <div class='chat-room-form__field--left'></div>
      <div class='chat-room-form__field--right'>
        <%= f.submit "Create Tweet", class: 'chat-room-form__action-btn'%>
      </div>
    </div>
  <% end %>
</div>
