<div class="chat-header">
  <div class="left-header">
    <div class="header-title">
      <%= @room.date%>
    </div>
  </div>
  <div class="right-header">
    <div class="header-button">
      <%= link_to "トップに戻る", root_path %>    
    </div>
  </div>
</div>

<div class="messages">
  <%= render partial: 'message', collection: @messages %>
</div>

<%= form_with model: [@room, @message], class: "form", local: true do |f|%>
  <div class="form-input">
    <%= f.text_field :content, class: 'form-message', placeholder: 'type a tweet' %>
    <label class="form-image">
      <span class="image-file">画像</span>
      <%= f.file_field :image, class: 'hidden' %>
    </label>
  </div>
  <%= f.collection_select(:motivation_id, Motivation.all, :id, :name, {include_blank: "現在の感情"}, {class:"select-box", id:"item-category"}) %>
  <%= f.submit '送信', class: 'form-submit' %>
<% end %>